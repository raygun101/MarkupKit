<LMRootView backgroundColor="white">
    <LMAnchorView>
        <LMScrollView anchor="all" fitToWidth="true">
            <LMColumnView layoutMargins="10" spacing="0">
                <UILabel id="label1" numberOfLines="0" lineBreakMode="byWordWrapping"/>
                <UILabel id="label2" numberOfLines="0" lineBreakMode="byWordWrapping"/>
            </LMColumnView>
        </LMScrollView>

        <LMColumnView anchor="bottom, left, right" layoutMargins="20">
            <UIButton style="systemButton" title="Press Me!"
                backgroundColor="#ffffffee" contentEdgeInsets="16" clipsToBounds="true"
                layer.borderWidth="0.5" layer.borderColor="gray" layer.cornerRadius="6"
                onPrimaryActionTriggered="showGreeting"/>
        </LMColumnView>
    </LMAnchorView>
</LMRootView>
